<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- 상단 현재 알림 제목 및 일괄 정지 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/nowAlarm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="예정알림"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right">
                <TextView
                    android:layout_width="56dp"
                    android:layout_height="20dp"
                    android:text="일괄정지"
                    android:textSize="14dp"
                    android:layout_gravity="center"/>
                <Switch
                    android:id="@+id/switch_all_stop"
                    android:layout_width="56dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 현재 알림 목록 영역 (RecyclerView) -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/currentAlarmRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="true"
            android:scrollbars="vertical"/>
        <TextView
            android:id="@+id/noCurrentAlarmsText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="아래의 플러스 버튼으로\n알림을 지정하세요."
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:visibility="gone"/>
    </FrameLayout>

    <!-- 하단 전체 알림 제목 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/allAlarm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="지난알림"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 전체 알림 목록 영역 (RecyclerView) -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/allAlarmRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="true"
            android:scrollbars="vertical"/>
        <TextView
            android:id="@+id/noAllAlarmsText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="오늘 설정한\n알림이 없습니다."
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:visibility="gone"/>
    </FrameLayout>

    <!-- 하단바 -->
    <include layout="@layout/bottom_navigation"/>
</LinearLayout>
